{
  "name": "webpack5-tailwindcss3-swc-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using Tailwind CSS 3, PostCSS and SWC",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --config config/webpack.config.dev.js --env development",
    "build": "webpack --config config/webpack.config.prod.js",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "stylelint": "stylelint ./src/sass/**/*.css"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack tailwindcss",
    "tailwindcss",
    "tailwindcss 3",
    "swc"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "1.7.36",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.11.0",
    "css-minimizer-webpack-plugin": "5.0.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "6.6.0",
    "eslint-webpack-plugin": "4.2.0",
    "file-loader": "6.2.0",
    "html-loader": "4.2.0",
    "html-webpack-live-reload-plugin": "1.0.12",
    "html-webpack-plugin": "5.6.2",
    "husky": "8.0.3",
    "mini-css-extract-plugin": "2.9.1",
    "postcss": "8.4.47",
    "postcss-loader": "7.3.4",
    "postcss-preset-env": "9.6.0",
    "prettier": "3.3.3",
    "replace-ext": "2.0.0",
    "style-loader": "3.3.4",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "swc-loader": "0.2.6",
    "tailwindcss": "3.4.14",
    "terser-webpack-plugin": "5.3.10",
    "webpack": "5.95.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-tailwindcss3-swc-starter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  },
  "optionalDependencies": {
    "@swc/core-darwin-x64": "1.7.36"
  }
}
